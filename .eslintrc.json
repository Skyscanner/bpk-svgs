{
  "extends": [
    "@skyscanner/eslint-config-skyscanner"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".json"
        ]
      }
    }
  },
  "rules": {
    // Temorary disabling prettier due to a issue in linting. We will raise a separate issue to fix this.
    "prettier/prettier": "off",
    "import/no-extraneous-dependencies": "off"
  }
}
